<Window x:Class="DSAandCprojectWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Editor" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <!-- TextBlock to display text -->
        <TextBox x:Name="inputTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Margin="25,39,25,0" Height="385" Width="750" KeyDown="InputTextBox_KeyDown" Grid.ColumnSpan="2"/>
        <Button Name="undoButton" Content="Undo" HorizontalAlignment="Left" Margin="360,14,0,0" VerticalAlignment="Top" Click="UndoButton_Click"/>
    </Grid>
</Window>
